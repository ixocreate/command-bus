{
    "name": "ixocreate/command-bus",
    "description": "IXOCREATE Command Bus Library",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "require": {
        "php": "^7.1",
        "ramsey/uuid": "^3.8",
        "symfony/options-resolver": "^4.1",
        "zendframework/zend-stdlib": "^3.2"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\CommandBus\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
